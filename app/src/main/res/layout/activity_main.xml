<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="Enter the name of the item you are looking for" />

    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginTop="40dp"
        android:text="Search" />

    <TextView
        android:id="@+id/dname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="20dp"
        android:text="" />

    <TextView
        android:id="@+id/dprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dname"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="20dp"
        android:text="" />

    <TextView
        android:id="@+id/dmanu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dprice"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="20dp"
        android:text="" />

    <TextView
        android:id="@+id/dcat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dmanu"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="20dp"
        android:text="" />

    <TextView
        android:id="@+id/dstock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dcat"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="20dp"
        android:text="" />


</RelativeLayout>